{{> preloader}}
{{> nologgedNabvar}}

<body>
    <main>
        <div class="container" style="margin-bottom: 10%;">
            <section class="mb-4">
                <h2 class="h1-responsive text-center my-5" style="font-family: Lora; color: var(--dark-green-color)">User Reviews</h2>
                <p class="text-center w-responsive mx-auto mb-5" style="font-family: Poppins; color: var(--grey-color); max-width: 550px">Reviews of other users!</p>
                <div id="review">
                <section class="reviews row" style="justify-content: center;">
                    {{#each reviews as |review|}}
                    {{> review-details}}
                    {{/each}}
                </section>
                </div>
                <div >
                {{#if loggedIn}}
                <div class="rev-btn" style="text-align: right; margin:20px">
                <button type="button" class='btn btn-outline-white btn-dark btn-submit' data-bs-toggle="modal" data-bs-target="#reviewModal" style="font-family: Poppins;  margin-right: 20%;">Submit a review!</button>
                </div>
                {{/if}}
                </div>
                <div class="modal fade" id="reviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Write your review!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form> 
                        <div class="form-group">
                            <label for="subject" style="font-family: Poppins; color: var(--dark-green-color)">Name</label>
                            <input type="name" class="form-control" id="nameInput" aria-describedby="reviewnameInput" placeholder="Write your name" style="text-align: left; margin-bottom: 2%;">
                        </div>
                        <div class="md-form">
                            <label for="" style="font-family: Poppins; color: var(--dark-green-color)">Write your review!</label>
                            <textarea type="text" id="revInput" name="review" row="3" class="form-control md-textarea" style="""font-family: Poppins; color: var(--grey-color)"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin: 3%;" id="reviewSubmit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
             
    </main>
   
<script src="../js/reviewSubmit.js"></script>

</body>